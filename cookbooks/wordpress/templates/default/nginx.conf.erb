<% if @app['path'] == '/' %>

root /usr/share/wordpress/;
listen 443 ssl;

ssl_certificate /etc/ssl/certs/<%=@app['hostname']%>.pem;
ssl_certificate_key /etc/ssl/private/<%=@app['hostname']%>.key;

location / {
  <%= render "_nginx.erb", cookbook: "wordpress" %>
  try_files $uri $uri/ /index.html;
}

<% else %>

location <%= @app['path'] %> {
  <%= render "_nginx.erb", cookbook: "wordpress" %>
  alias /usr/share/wordpress/;
}

<% end %>
